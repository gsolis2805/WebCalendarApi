@using Web_Calendar_Api.Models;
@model List<Event>

@if (Model.Count !=0)
{
    <div>
        @foreach (Event calendarEvent in Model)
        {
            <div style="margin: 30px;" class="row">
                <a style="cursos: pinter; text-decoration: none;" class="col-sm-4" onclick="location.href = '@Url.Action("Event", "CalendarEvent", new {identifier = calendarEvent.Id})' ">
                    <div styoe="margin: 30px;" class="row">
                        <p>Sumary: @calendarEvent.Summary</p>
                        <p>Description: @calendarEvent.Description</p>
                        <p>Start: @(DateTime.Parse(@calendarEvent.Start.DateTime).ToString("dd-MM-yyyy hh:mm")) (@calendarEvent.Start.TimeZone)</p>
                        <p>End:@(DateTime.Parse(@calendarEvent.End.DateTime).ToString("dd-MM-yyyy hh:mm")) (@calendarEvent.End.TimeZone)</p>
                    </div>
                </a>
            </div>
        }
    </div>
}
else
{
    <div style="margin: 30px; font-size: 20px;">
        No events Found
    </div>
}